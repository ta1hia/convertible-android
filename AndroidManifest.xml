<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.convertible"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="11"/>
    <application android:label="@string/app_name">
        <activity android:name=".activity.BaseActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:theme="@style/sexy_theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.OptionMenuActivity"
                  android:label="@string/option_menu_activity"
                  android:screenOrientation="portrait"
                  android:theme="@style/sexy_theme">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.AreaConversionActivity"
                  android:label="@string/option_area"
                  android:screenOrientation="portrait"
                  android:theme="@style/sexy_theme">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.LengthConversionActivity"
                  android:label="@string/option_area"
                  android:screenOrientation="portrait"
                  android:theme="@style/sexy_theme">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>
</manifest> 
